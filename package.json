{
  "name": "typecheck.macro",
  "version": "0.0.1",
  "description": "Macros for validating data against Typescript data structures",
  "scripts": {
    "build": "babel src --out-dir dist --extensions \".ts\"",
    "format": "prettier --write \"src/*.ts\" --write \"tests/*.ts\" --write package.json --write babel.config.json",
    "test:build": "babel src tests/test.ts --out-dir temp_build --extensions \".ts\"",
    "test:run": "ava",
    "test": "npm run test:build && npm run test:run"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      }
    },
    "require": [
      "esm"
    ]
  },
  "author": "Vedant Roy",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-macros": "^2.8.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/plugin-transform-typescript": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/babel-plugin-macros": "^2.8.1",
    "@types/node": "^13.13.2",
    "ava": "^3.7.1",
    "esm": "^3.2.25",
    "prettier": "^2.0.5"
  }
}
